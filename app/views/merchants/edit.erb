<html>
  <head>
    <title>Little Shop Redux</title>
    <link rel="stylesheet" href="/merchant.css"  type="text/css" />
    <link rel="shortcut icon" href="https://i.imgur.com/dfPcsdI.png" type="image/x-icon" />
  </head>
  <body>
    <header>
      <img src="https://i.imgur.com/ZyZhR2j.jpg" alt="banner" height="300px" width="100%">
    </header>
    <div class="nav">
      <div class="navbar">
        <a href="/">Home</a>
        <div class="dropdown">
          <button class="dropbtn">Merchants
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content" id="merchant-dropdown">
            <a href="/merchants/new">Create a New Merchant</a>
            <a href="/merchants/edit_input">Edit a Merchant</a>
            <a href="/merchants">View All Merchants</a>
            <a href="/merchants/show_input">View a Merchant</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Items
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
           <a href="/items/new">Create a New Item</a>
           <a href="/items/edit_input">Edit an Item</a>
           <a href="/items">View All Items</a>
           <a href="/items/show_input">View an Item</a>
           <a href="/items-dashboard">Item Analytics</a>
         </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Categories
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
            <a href="/categories/new">New</a>
            <a href="/categories">Index</a>
          </div>
        </div>
      </div>
      <div class="edit">
        <form action="/merchants/<%= @merchant.id %>" method="POST">
          <p>Edit Merchant</p>
          <input type="hidden" name="_method"  class="input" value="PUT" />
          <input type='number' name='merchant[id]' style="width: 300px;" class="input" value="<%= @merchant.id %>"/><br/>
          <input type='text' name='merchant[name]' class="input" style="width: 300px;" class="input" value="<%= @merchant.name %>"/><br/>
          <input type="hidden" name='merchant[created_at]' class="input" style="width: 300px;" class="input" value="<%= @merchant.created_at %>"/><br/>
          <input type="hidden" name='merchant[updated_at]' class="input" style="width: 300px;" class="input" value="<%= Time.now %>"/><br/>
          <input type='submit'/>
        </form>
       </div>
      <div class="footer">
  </div>
  </body>
</html>
