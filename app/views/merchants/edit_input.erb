<html>
  <head>
    <title>Little Shop Redux</title>
    <link rel="stylesheet" href="/merchant.css"  type="text/css" />
    <link rel="shortcut icon" href="https://i.imgur.com/dfPcsdI.png" type="image/x-icon" />
  </head>
  <body>
    <header>
      <img src="https://i.imgur.com/ZyZhR2j.jpg" alt="banner" height="300px" width="100%">
    </header>
    <div class="nav">
      <div class="navbar">
        <a href="/">Home</a>
        <div class="dropdown">
          <button class="dropbtn">Merchants
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content" id="merchant-dropdown">
            <a href="/merchants/new">Create a New Merchant</a>
            <a href="/merchants/edit_input">Edit a Merchant</a>
            <a href="/merchants">View All Merchants</a>
            <a href="/merchants/show_input">View a Merchant</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Items
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
           <a href="/items/new">Create a New Item</a>
           <a href="/items/edit_input">Edit an Item</a>
           <a href="/items">View All Items</a>
           <a href="/items/show_input">View an Item</a>
           <a href="/items-dashboard">Item Analytics</a>
         </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Categories
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
            <a href="/categories/new">Create a New Category</a>
            <a href="/categories">View All Categories</a>
          </div>
        </div>
      </div>
      <div class="new">
        <h3> Please enter merchant-id or select the merchant you wish to edit </h3>
        <form action="/merchants/edit/" method="get">
          <input id="merchant_id_text_box" type="text" name="id"/>
          <input id="search-one" type="submit" value="Search"/>
        </form>
        <form action="/merchants/edit/" method="get">
          <select name="id">
            <label for="id">Select a Merchant</label>
            <% @merchants.each() do |merchant| %>
            <option value="<%= merchant.id()%>"> <%= merchant.name() %> </option>
            <% end %>
            <input id="search-two" type="submit" value="Search"/>
          </select>
          <br><br>
        </form>
      </div>
      <div class="footer">
      </div>
    </body>
</html>
