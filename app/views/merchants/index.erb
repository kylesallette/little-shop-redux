<html>
  <head>
    <title>Little Shop Redux</title>
    <link rel="stylesheet" href="merchant.css"  type="text/css" />
  </head>
  <body>
    <header>
      <img src="https://i.imgur.com/ZyZhR2j.jpg" alt="banner" height="300px" width="100%">
    </header>
    <div class="nav"  width="100px">
      <div class="navbar">
        <a href="/">Home</a>
        <div class="dropdown">
          <button class="dropbtn">Merchants
            <i class="fa fa-caret-down"></i>
          </button>
          <div class="dropdown-content" id="drop-down">
            <a href="/merchants/new">Create a New Merchant</a>
            <a href="/merchants/edit_input">Edit a Merchant</a>
            <a href="/merchants">View All Merchants</a>
            <a href="/merchants/show_input">View a Merchant</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Items
            <i class="fa fa-caret-down"></i>
          </button>
          <div class="dropdown-content">
           <a href="/items/new">Create a New Item</a>
           <a href="/items/edit_input">Edit an Item</a>
           <a href="/items">View All Items</a>
           <a href="/items/show_input">View an Item</a>
         </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Categories
            <i class="fa fa-caret-down"></i>
          </button>
          <div class="dropdown-content">
            <a href="/categories/new">New</a>
            <a href="/categories">Index</a>
          </div>
        </div>
      </div>
      <% @merchants.each do |merchant| %>
      <div class="merchants">
        <ul>
          <li>Id / <%= merchant.id %></li>
          <li>Merchant / <%= merchant.name %></li>
          <li>Created-at / <%= merchant.created_at %></li>
          <li>Updated-at / <%= merchant.updated_at %></li>
          <a class='buttons' href="/merchants/edit/<%= merchant.id  %>">Edit</a>
          <form action="/merchants/<%= merchant.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE"/>
            <input type="submit" value="Delete"/>
          </form>
          </ul>
        </form>
      </div>
  <% end %>
  </body>
</html>
