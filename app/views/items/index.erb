<html>
  <head>
    <title>Little Shop Redux</title>
    <link rel="stylesheet" href="merchant.css"  type="text/css" />
    <link rel="shortcut icon" href="https://i.imgur.com/dfPcsdI.png" type="image/x-icon" />
  </head>
  <body>
    <header>
      <img src="https://i.imgur.com/WvrLpTj.jpg" alt="banner" height="300px" width="100%">
    </header>
    <div class="nav"  width="100px">
      <div class="navbar">
        <a href="/">Home</a>
        <div class="dropdown">
          <button class="dropbtn">Merchants
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content" id="drop-down">
            <a href="/merchants/new">Create a New Merchant</a>
            <a href="/merchants/edit_input">Edit a Merchant</a>
            <a href="/merchants">View All Merchants</a>
            <a href="/merchants/show_input">View a Merchant</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Items
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
            <a href="/items/new">Create a New Item</a>
            <a href="/items/edit_input">Edit an Item</a>
            <a href="/items">View All Items</a>
            <a href="/items/show_input">View an Item</a>
            <a href="/items-dashboard">Item Analytics</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Categories
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
            <a href="/categories/new">Create a New Category</a>
            <a href="/categories">View All Categories</a>
          </div>
        </div>
      </div>
      <% @items.each do |item| %>
      <div class="merchants">
        <ul>
          <li><img src="https://i.imgur.com/N2o9ZXa.png" class="suitcases" alt="Suitcases"></li>
          <li>Id / <%= item.id %></li>
          <li>Item / <%= item.name %></li>
          <li>Description / <%= item.description%></li>
          <li>Unit-price / <%= item.unit_price%></li>
          <li>Merchant-id / <%= item.merchant_id%></li>
          <li>Created-at / <%= item.created_at %></li>
          <li>Updated-at / <%= item.updated_at %></li>
          <a id="submit" class='link-button' href="/items/edit/<%= item.id  %>">Edit</a>
          <form action="/items/<%= item.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE"/>
            <input id="submit" type="submit" value="Delete"/>
          </form>
          </ul>
        </form>
      </div>
  <% end %>
  </body>
</html>
